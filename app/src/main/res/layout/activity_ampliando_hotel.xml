<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AmpliandoHotel"
    android:background="@color/white">


    <HorizontalScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    <ImageView
        android:id="@+id/FotoHoteles"
        android:layout_width="420dp"
        android:layout_height="250dp"
        android:src="@drawable/raddissonblue"
        android:scaleType="fitXY"
        />

        <ImageView
            android:id="@+id/FotoHoteles2"
            android:layout_width="420dp"
            android:layout_height="250dp"
            android:src="@drawable/smarth"
            android:scaleType="fitXY"
            />

    </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/NombreHoteles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Radisson"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scroll"
        app:layout_constraintVertical_bias="0.045" />

    <TextView
        android:id="@+id/PrecioHoteles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$100.000"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/NombreHoteles"
        app:layout_constraintVertical_bias="0.124" />

    <TextView
        android:id="@+id/TelefonoHoteles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3137720706"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/PrecioHoteles"
        app:layout_constraintVertical_bias="0.164" />

    <RatingBar
        android:id="@+id/valoracionH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="20dp"
        android:max="5"
        android:numStars="5"
        android:progressTint="@color/royalblue"
        android:rating="4.4"
        android:stepSize="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TelefonoHoteles" />

    <TextView
        android:id="@+id/comentarioH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rogelio:aaaa aaaaaaaa"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/valoracionH"
        app:layout_constraintVertical_bias="0.147" />

    <Button
        android:id="@+id/BotonHoteles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="60dp"
        android:backgroundTint="@color/royalblue"
        android:text="RESERVAR"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TelefonoHoteles"
        app:layout_constraintVertical_bias="0.791" />

</androidx.constraintlayout.widget.ConstraintLayout>