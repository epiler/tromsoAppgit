<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AmpliandoTurismo"
    android:background="@color/white">



    <HorizontalScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/FotoTurismos"
        android:layout_width="420dp"
        android:layout_height="250dp"
        android:src="@drawable/tromsonorthernlightstour"
        android:scaleType="fitXY"
        />

        <ImageView
            android:id="@+id/FotoTurismos2"
            android:layout_width="420dp"
            android:layout_height="250dp"
            android:src="@drawable/scandic"
            android:scaleType="fitXY"
            />


    </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/NombreTurismos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Auroras Boreales"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scroll"
        app:layout_constraintVertical_bias="0.054" />

    <TextView
        android:id="@+id/LoremTurismo"
        android:layout_width="wrap_content"
        android:layout_height="164dp"
        android:text="Quisque vehicula, enim at ornare auctor, nibh elit im  Aenean tincidunt nulla orci, eget finibus risus vulputate a. Praesent rhoncus quis quam in venenatis.
        Aliquam sollicitudin nunc enim enim."
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/NombreTurismos"
        app:layout_constraintVertical_bias="0.094" />


    <RatingBar
        android:id="@+id/valoracionT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginTop="8dp"
        android:max="5"
        android:numStars="5"
        android:progressTint="@color/royalblue"
        android:rating="4.4"
        android:stepSize="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LoremTurismo"/>


    <TextView
        android:id="@+id/comentarioT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="jsjs:kjfdjkfjf"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/valoracionT"
        app:layout_constraintVertical_bias="0.094" />

    <Button
        android:id="@+id/BotonTurismo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="60dp"
        android:backgroundTint="@color/royalblue"
        android:text="RESERVAR"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/LoremTurismo"
        app:layout_constraintVertical_bias="0.873" />

</androidx.constraintlayout.widget.ConstraintLayout>